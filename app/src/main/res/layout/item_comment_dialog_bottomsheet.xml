<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/commetn_dialog_bottomsheet_title"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <Button
            android:id="@+id/dialog_bottomsheet_ic_close"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_close"/>
            android:padding="5dp" />

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/dialog_bottomsheet_ic_close"
            android:text="评论"
            android:textColor="#333"
            android:textSize="20sp" />

        <Button
            android:id="@+id/dialog_comment_add_button"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="250sp"
            android:layout_toRightOf="@id/dialog_title"
            android:background="@drawable/ic_comment_add" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comment_dialog_bottomsheet_comment_lists"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/commetn_dialog_bottomsheet_title"
        android:background="#fff" />

</RelativeLayout>